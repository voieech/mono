{
  "extends": "expo/tsconfig.base",
  "include": ["**/*.ts", "**/*.tsx", ".expo/types/**/*.ts", "expo-env.d.ts"],
  "compilerOptions": {
    "strict": true,
    "paths": {
      "@/*": ["./src/*"],
      "dto": ["../api/src/dto-types/index.ts"]
    },

    // Prevent auto code deletion in editors
    "allowUnreachableCode": true
  }
}
